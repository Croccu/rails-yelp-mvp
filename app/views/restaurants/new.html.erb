<div class="container mt-3">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: ['french', 'italian', 'belgian', 'chinese', 'japanese'] %>
    <%= f.input :phone_number %>
    <%= f.submit class: "btn btn-secondary" %>
  <% end %>
</div>
