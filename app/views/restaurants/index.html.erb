<div class="container mt-3">
  <div class="container d-flex justify-content-between align-items-center">
    <h1>List</h1>
    <%= link_to "Add a restaurant", new_restaurant_path(@restaurant), :class=>"btn btn-secondary" %>
  </div>
  <div class="border-top mt-3 pt-3">
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li class="m-2"><%= restaurant.name %> - <%= restaurant.category.capitalize %> <%= link_to "See details", restaurant_path(restaurant), :class=>"btn btn-info" %></li>
        <br>
      <% end %>
    </ul>
  </div>
</div>
